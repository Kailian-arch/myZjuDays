\DeclareOption{ENG}{
    \ctexset{
        abstractname = {Abstract},
        bibname = {References}
    }
    \renewcommand{\abstract}{\section*{Abstract}}
    \newcommand{\keywords}{\paragraph{Keywords:}}
    \newcommand{\acknowledgements}{\section*{Acknowledgements}}
}
\DeclareOption{CHN}{
    \ctexset{
    abstractname = {摘要},
    bibname = {参考文献},
    figurename = {图},
    tablename = {表}
    }
    \renewcommand{\abstract}{\section*{摘\quad 要}}
    \newcommand{\keywords}{\paragraph{关键词:}}
    \newcommand{\acknowledgements}{\section*{致\quad 谢}}
}

